{
  "name": "@nanostores/vue",
  "version": "0.8.0",
  "description": "Vue integration for Nano Stores, a tiny state manager with many atomic tree-shakable stores",
  "keywords": [
    "store",
    "state",
    "state manager",
    "vue"
  ],
  "scripts": {
    "test": "vitest run --coverage && eslint . && check-dts && size-limit",
    "test:watch": "vitest watch"
  },
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "repository": "nanostores/vue",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./devtools": "./devtools/index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "@vue/devtools-api": ">=6.1.4",
    "nanostores": ">=0.8.1",
    "vue": ">=3.3.1"
  },
  "peerDependenciesMeta": {
    "@vue/devtools-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@logux/eslint-config": "49.0.0",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@testing-library/vue": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-c8": "^0.31.0",
    "@vue/compiler-sfc": "^3.3.2",
    "@vue/devtools-api": "^6.5.0",
    "c8": "^7.13.0",
    "check-dts": "^0.7.2",
    "clean-publish": "^4.2.0",
    "eslint": "^8.40.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "happy-dom": "^9.17.0",
    "nano-staged": "^0.8.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.8.1",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^8.2.4",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vitest": "^0.31.0",
    "vue": "^3.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm"
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "useStore",
      "import": {
        "index.js": "{ useStore }",
        "nanostores": "{ map, computed }"
      },
      "limit": "879 B"
    },
    {
      "name": "useStore + helpers",
      "import": {
        "index.js": "{ useStore, useVModel, mapStores }",
        "nanostores": "{ map, computed }"
      },
      "limit": "1049 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
