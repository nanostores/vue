{
  "name": "@nanostores/vue",
  "version": "0.1.0",
  "description": "Vue integration for Nano Stores, a tiny state manager with many atomic tree-shakable stores",
  "keywords": [
    "store",
    "state",
    "state manager",
    "vue"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch"
  },
  "author": "Eduard Aksamitov <e@edaks.co>",
  "license": "MIT",
  "repository": "nanostores/vue",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "@vue/devtools-api": ">= 6.0.0-beta.19",
    "nanostores": "^0.5.0",
    "vue": ">=3.2.0"
  },
  "peerDependenciesMeta": {
    "@vue/devtools-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@logux/eslint-config": "^46.0.0",
    "@logux/sharec-config": "^0.12.2",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/vue": "^6.4.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vue/compiler-sfc": "^3.2.20",
    "@vue/devtools-api": "^6.0.0-beta.19",
    "check-dts": "^0.6.1",
    "clean-publish": "^3.4.2",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.5.0",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^6.0.3",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "vue": "^3.2.1",
    "yaspeller": "^7.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "isolatedModules": true
      }
    },
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/devtools/"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm"
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": {
        "index.js": "{ useStore }",
        "nanostores": "{ map, computed }"
      },
      "limit": "717 B"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ “[^”]+”"
    ],
    "dictionary": [
      "Versioning",
      "Vue",
      "shakable",
      "KB"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.12.2"
  }
}
