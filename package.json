{
  "name": "@nanostores/vue",
  "version": "1.0.0",
  "description": "Vue integration for Nano Stores, a tiny state manager with many atomic tree-shakable stores",
  "keywords": [
    "store",
    "state",
    "state manager",
    "vue"
  ],
  "scripts": {
    "demo": "vite ./demo",
    "test:lint": "eslint .",
    "test:coverage": "vitest run --coverage",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm --color run /^test:/"
  },
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "repository": "nanostores/vue",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./devtools": "./devtools/index.js",
    "./package.json": "./package.json"
  },
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "funding": [
    {
      "type": "buymeacoffee",
      "url": "https://buymeacoffee.com/euaaaio"
    }
  ],
  "peerDependencies": {
    "@nanostores/logger": "^0.4.0 || ^1.0.0",
    "@vue/devtools-api": ">=7.6.2",
    "nanostores": "^0.11.3 || ^1.0.0",
    "vue": ">=3.3.1"
  },
  "peerDependenciesMeta": {
    "@nanostores/logger": {
      "optional": true
    },
    "@vue/devtools-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@logux/eslint-config": "56.0.0",
    "@nanostores/logger": "^1.0.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^22.14.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/compiler-sfc": "^3.5.17",
    "@vue/devtools-api": "^7.7.7",
    "check-dts": "^0.9.0",
    "clean-publish": "^5.2.2",
    "eslint": "^9.30.1",
    "happy-dom": "^18.0.1",
    "nano-staged": "^0.8.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^1.0.1",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.0",
    "size-limit": "^11.2.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.3",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue": "^3.5.17"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "name": "useStore",
      "import": {
        "index.js": "{ useStore }",
        "nanostores": "{ map, computed }"
      },
      "limit": "826 B"
    },
    {
      "name": "useStore + helpers",
      "import": {
        "index.js": "{ useStore, useVModel, mapStores }",
        "nanostores": "{ map, computed }"
      },
      "limit": "973 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
