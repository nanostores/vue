{
  "name": "@nanostores/vue",
  "version": "0.6.0",
  "description": "Vue integration for Nano Stores, a tiny state manager with many atomic tree-shakable stores",
  "keywords": [
    "store",
    "state",
    "state manager",
    "vue"
  ],
  "scripts": {
    "test": "vitest run --coverage && eslint . && check-dts && size-limit",
    "test:watch": "vitest watch"
  },
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "repository": "nanostores/vue",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./devtools": "./devtools/index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^14.0.0 || ^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "@vue/devtools-api": ">=6.1.4",
    "nanostores": ">=0.6.0",
    "vue": ">=3.2.30"
  },
  "peerDependenciesMeta": {
    "@vue/devtools-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@logux/eslint-config": "47.2.0",
    "@size-limit/preset-small-lib": "^8.0.1",
    "@testing-library/vue": "^6.6.1",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vitest/coverage-c8": "^0.22.1",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/devtools-api": "^6.2.1",
    "c8": "^7.12.0",
    "check-dts": "^0.6.7",
    "clean-publish": "^4.0.1",
    "eslint": "^8.22.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "jsdom": "^20.0.0",
    "nano-staged": "^0.8.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.6.0",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "size-limit": "^8.0.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vitest": "^0.22.1",
    "vue": "^3.2.37"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm"
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "useStore",
      "import": {
        "index.js": "{ useStore }",
        "nanostores": "{ map, computed }"
      },
      "limit": "799 B"
    },
    {
      "name": "useStore + helpers",
      "import": {
        "index.js": "{ useStore, useVModel, mapStores }",
        "nanostores": "{ map, computed }"
      },
      "limit": "963 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
